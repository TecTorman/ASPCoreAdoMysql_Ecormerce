@model ApplicationCore.Interfaces.ProductViewModel
@{
    Layout = null;
}
<div>
    <section>

        <form asp-formhelper="true" id="Edit" enctype="multipart/form-data" asp-controller="Product" asp-action="Edit">

            <fieldset>
                <h2><i class="glyphicon glyphicon-pencil">&nbsp;</i>Editar produto</h2>
                <div id="result">
                    <div class="alert alert-success" role="alert">
                        <i class="fa fa-info-circle">&nbsp;</i>Caso não tenha categoria desejada clique <a>aqui</a>.
                    </div>
                </div>
                <input style="display:none" type="number" name="ProductId" class="form-control" id="ProductId" value="@Model.ProductId" aria-describedby="form-nome">
                <div class="btn-toolbar" role="toolbar">
                    <div class="row col-lg-12">
                        <div class="input-group">
                            <span class="input-group-addon" id="form-nome">Nome</span>
                            <input type="text" name="Name" class="form-control" id="Name" value="@Model.Name" aria-describedby="form-nome">

                            <span class="input-group-addon" id="form-nome">Categoria:</span>
                            <input id="CategoryId" name="CategoryId" value="@Model.CategoryId" class="form-control">
                        </div>

                    </div>
                </div>
                <br />
                <div class="btn-toolbar" role="toolbar">
                    <div class="row col-lg-10">
                        <div class="input-group">
                            <span class="input-group-addon" id="form-nome">Preço</span>
                            <input type="number" name="Value" class="form-control" value="@Model.Value" id="Value" aria-describedby="form-value">

                            <span class="input-group-addon" id="form-value">QTD.Estoque</span>
                            <input id="Stock" name="Stock" value="@Model.Stock" class="form-control">
                        </div>

                    </div>
                </div>
                <br />
                <div class="row col-lg-10">
                    <textarea rows="4" type="text" class="form-control" id="Description" value="@Model.Description" name="Description" placeholder="Descrição" required>@Model.Description</textarea>
                </div>
                <br />
                <div class="row col-lg-6">
                    <div class=" btn-toolbar" role="toolbar">
                        <br />
                        <div class="input-group">
                            <span class="input-group-addon" id="form-nome">Imagem</span>
                            <input type="file" class="form-control" id="file" name="file" placeholder="Upload of avatar" required>

                        </div>
                    </div>
                </div>               

            </fieldset>
            <hr />
            <div class="row" align="center">
                <button type="button" class="btn btn-default" data-dismiss="modal"><i class="fa fa-times">&nbsp</i>Fechar</button>
                <button type="button" class="btn btn-default" value="Register" onclick="Edit_Dao()"><i class="fa fa-floppy-o">&nbsp</i>Salvar</button>

            </div>
        </form>

    </section>
</div>
